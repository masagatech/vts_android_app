            android:layout_marginTop="10dp"
            android:background="@drawable/texttitle"
            android:paddingBottom="0dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="0dp">

            <TextView
                android:id="@+id/textView86"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="Vehicle Facility"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/vhfacility"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="19dp"
                android:layout_marginStart="19dp"
                android:layout_toRightOf="@+id/textView86"
                android:gravity="right"
                android:text="---"
                android:textColor="@color/about_play_store_color" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/texttitle"
            android:paddingBottom="0dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="0dp">

            <TextView
                android:id="@+id/textView87"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="Speed Alert Above(km/h)"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/vhallwspd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="19dp"
                android:layout_marginStart="19dp"
                android:layout_toRightOf="@+id/textView87"
                android:gravity="right"
                android:text="---"
                android:textColor="@color/about_play_store_color" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/texttitle"
            android:paddingBottom="0dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="0dp">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="178dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:singleLine="true"
                android:text="Last Speed Violated Time"
                android:textColor="@color/colorHolo" />

            <TextView
                android:id="@+id/vhlastspdtm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="19dp"
                android:layout_toRightOf="@+id/textView8"
                android:gravity="right"
                android:text="---"
                android:textColor="@color/colorHolo"
                android:textSize="11sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/texttitle"
            android:paddingBottom="0dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="0dp">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="Last Violated Speed(km/h)"
                android:textColor="@color/colorHolo" />

            <TextView
                android:id="@+id/vhlastviospd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="19dp"
                android:layout_marginStart="19dp"
                android:layout_toRightOf="@+id/textView8"
                android:gravity="right"
                android:text="---"
                android:textColor="@color/colorHolo" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/texttitle"
            android:paddingBottom="0dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="0dp">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="Sim No"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/vhsimno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="19dp"
                android:layout_marginStart="19dp"
                android:layout_toRightOf="@+id/textView8"
                android:gravity="right"
                android:text="---"
                android:textColor="@color/about_play_store_color" />
        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnTrackPop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/theme_button_light"
        android:text="TRACK"
        android:textColor="@color/white"
        android:layout_alignParentRight="true" />
</RelativeLayout>
