<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.goyo.goyorider.forms.dashboard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/gradient_bg_dash"
                    android:gravity="center_horizontal"
                    android:singleLine="true"
                    android:text="Total"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/gradient_bg_dash"
                    android:gravity="center_horizontal"
                    android:singleLine="true"
                    android:text="Online"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/gradient_bg_dash"
                    android:gravity="center_horizontal"
                    android:singleLine="true"
                    android:text="Offline"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/gradient_bg_dash"
                    android:gravity="center_horizontal"
                    android:singleLine="true"
                    android:text="Moving"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/gradient_bg_dash"
                    android:gravity="center_horizontal"
                    android:singleLine="true"
                    android:text="Speed"
                    android:textColor="@color/white"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtTotalCt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/gradient_bg_dash_bottom"
                    android:gravity="center_horizontal"
                    android:text="LO"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/txtOnlineCt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/gradient_bg_dash_bottom"
                    android:gravity="center_horizontal"
                    android:text="A"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/txtOfflineCt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/gradient_bg_dash_bottom"
                    android:gravity="center_horizontal"
                    android:text="D"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/txtMovingCt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/gradient_bg_dash_bottom"
                    android:gravity="center_horizontal"
                    android:text="I"
                    android:textColor="@android:color/holo_orange_light"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/txtSpeed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/gradient_bg_dash_bottom"
                    android:gravity="center_horizontal"
                    android:text="NG"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="25sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:paddingBottom="4dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:background="@drawable/dash_blue_btn"
                android:clickable="true"
                android:clipChildren="true"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/livetracking"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_bg">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:padding="7dp"
                        android:src="@drawable/livetracking" />

                    <TextView
                        android:id="@+id/textView23"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="0dp"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center"
                        android:text="@string/live_tracking"
                        android:textColor="@color/about_background_color"
                        android:textSize="13sp" />

                    <ImageView
                        android:id="@+id/imgLive"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="top"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        app:srcCompat="@drawable/online" />
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/dash_purple_btn"
                android:clickable="true"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/history"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_bg">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:padding="7dp"
                        android:src="@drawable/historyp" />

                    <TextView
                        android:id="@+id/txtHistory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="0dp"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center"
                        android:text="Tracking History"
                        android:textColor="@color/about_background_color"
                        android:textSize="13sp" />
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/dash_green_btn"
                android:clickable="true"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/vehicle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_bg">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:padding="7dp"
                        android:src="@drawable/vehicle" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="0dp"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center"
                        android:text="Manage Vehicles"
                        android:textColor="@color/about_background_color"
                        android:textSize="13sp" />
                </FrameLayout>

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/dash_fuel_btn"
                android:clickable="true"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/fuelform"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_bg">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:padding="7dp"
                        android:src="@drawable/fuel"
                        android:visibility="visible" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="0dp"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center"
                        android:text="Fuel Entry"
                        android:textColor="@color/about_background_color"
                        android:textSize="13sp"
                        android:visibility="visible" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/dash_red_btn"
                android:clickable="true"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/speedreport"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_bg">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:padding="7dp"
                        android:src="@drawable/speedrpt"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/txtMilegereport1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="0dp"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center"
                        android:text="Speed Report"
                        android:textColor="@color/about_background_color"
                        android:textSize="13sp"
                        android:visibility="visible" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/dash_orange_btn"
                android:clickable="true"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/milegerpt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_bg">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:padding="7dp"
                        android:src="@drawable/milegerpt" />

                    <TextView
                        android:id="@+id/txtMilegereport"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="0dp"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center"
                        android:text="Mileage Report"
                        android:textColor="@color/about_background_color"
                        android:textSize="13sp" />
                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/dash_white_btn"
                android:clickable="true"
                android:orientation="vertical"
                android:visibility="visible">

                <FrameLayout
                    android:id="@+id/viewmykids"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_bg">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:padding="7dp"
                        android:src="@drawable/trips" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="0dp"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center"
                        android:text="Trips"
                        android:textColor="@color/about_background_color"
                        android:textSize="13sp" />
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/dash_gray_btn"
                android:clickable="true"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/settings"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_bg">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:padding="7dp"
                        android:src="@drawable/settings" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="0dp"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center"
                        android:text="Settings"
                        android:textColor="@color/about_background_color"
                        android:textSize="13sp" />
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/dash_gray_btn"
                android:clickable="true"
                android:orientation="vertical"
                android:visibility="invisible">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_bg">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:padding="7dp"
                        android:src="@drawable/settings" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="0dp"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center"
                        android:text="Settings"
                        android:textColor="@color/about_background_color"
                        android:textSize="13sp" />
                </FrameLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
